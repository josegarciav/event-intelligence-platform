{
  "config_version": 1,
  "recipe": "jobs",
  "sources": [
    {
      "source_id": "tech_jobs_1",
      "entrypoints": [
        {
          "url": "https://example.com/jobs?page={page}",
          "paging": { "pages": 10 }
        }
      ],
      "engine": { "type": "http", "timeout_s": 15.0 },
      "discovery": {
        "link_extract": { "method": "regex", "pattern": "/view-job/\\d+" }
      },
      "parsing": {
        "item_extract": {
          "fields": {
            "title": { "selector": "h1.job-title" },
            "company": { "selector": ".company-name" },
            "location": { "selector": ".job-location" },
            "description": { "selector": ".job-details" }
          }
        }
      }
    },
    {
      "source_id": "corp_jobs_2",
      "entrypoints": [
        {
          "url": "https://example.org/careers/search?offset={offset}",
          "paging": { "mode": "offset", "pages": 5, "step": 20 }
        }
      ],
      "engine": {
        "type": "browser",
        "browser": { "headless": true, "timeout_s": 30.0 }
      },
      "discovery": {
        "link_extract": { "method": "css", "selector": "a.job-link" }
      }
    },
    {
      "source_id": "startup_jobs_3",
      "entrypoints": [{ "url": "https://startup.io/jobs" }],
      "engine": { "type": "http", "verify_ssl": false },
      "discovery": {
        "link_extract": { "method": "regex", "pattern": "/jobs/\\w+" }
      }
    }
  ]
}
