{
  "config_version": 1,
  "recipe": "jobs",
  "sources": [
    {
      "source_id": "quotes_jobs_mock",
      "entrypoints": [
        {
          "url": "https://quotes.toscrape.com/page/{page}/",
          "paging": { "pages": 1 }
        }
      ],
      "engine": { "type": "http" },
      "discovery": {
        "link_extract": { "method": "regex", "pattern": "/author/\\w+" }
      },
      "parsing": {
        "item_extract": {
          "fields": {
            "title": { "selector": "h3" },
            "company": { "selector": ".author-born-date" },
            "location": { "selector": ".author-born-location" },
            "description": { "selector": ".author-description" }
          }
        }
      }
    },
    {
      "source_id": "books_jobs_mock",
      "entrypoints": [
        {
          "url": "https://books.toscrape.com/catalogue/page-{page}.html",
          "paging": { "pages": 1 }
        }
      ],
      "engine": { "type": "http" },
      "discovery": {
        "link_extract": { "method": "css", "selector": "h3 a" }
      },
      "parsing": {
        "item_extract": {
          "fields": {
            "title": { "selector": "h1" },
            "company": { "selector": ".price_color" },
            "location": { "selector": ".instock" },
            "description": { "selector": "#product_description + p" }
          }
        }
      }
    }
  ]
}
