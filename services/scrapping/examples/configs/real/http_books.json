{
  "sources": [
    {
      "source_id": "http_books",
      "engine": {
        "type": "http",
        "rate_limit_policy": { "min_delay_s": 0.5 }
      },
      "entrypoints": [
        { "url": "https://books.toscrape.com/catalogue/page-{page}.html", "paging": { "mode": "page", "start": 1, "end": 2 } }
      ],
      "discovery": {
        "link_extract": { "method": "css", "selector": ".product_pod h3 a" }
      },
      "quality": { "min_text_len": 100 }
    }
  ]
}
